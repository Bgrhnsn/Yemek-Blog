<!-- 💬 Yorumlar Başlığı -->
<h2 class="mt-5 mb-3">💬 Yorumlar</h2>

<% if (recipe.comments && recipe.comments.length > 0) { %>
  <% recipe.comments.forEach(comment => { %>
    <div class="card mb-3">
      <div class="card-body">
        <strong><%= comment.username %></strong>
        <p class="mb-1"><%= comment.text %></p>
        <small class="text-muted"><%= comment.createdAt.toLocaleString() %></small>
      </div>
    </div>
  <% }) %>
<% } else { %>
  <div class="alert alert-info">Henüz yorum yapılmamış.</div>
<% } %>

<!-- 📝 Yorum Ekleme Formu -->
<div class="card mt-4">
  <div class="card-body">
    <h4 class="card-title mb-3">📝 Yorum Ekle</h4>

    <form action="/recipes/<%= recipe.slug %>/comments" method="POST">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">

      <div class="mb-3">
        <label for="username" class="form-label">Adınız</label>
        <input type="text" class="form-control" id="username" name="username" required>
      </div>

      <div class="mb-3">
        <label for="text" class="form-label">Yorum</label>
        <textarea class="form-control" id="text" name="text" rows="3" placeholder="Yorumunuzu yazın..." required></textarea>
      </div>

      <button type="submit" class="btn btn-primary w-100">Gönder</button>
    </form>
  </div>
</div>
